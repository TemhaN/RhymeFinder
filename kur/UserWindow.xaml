<Window x:Class="kur.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kur"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Окно пользователя" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#F5F3FF">
    <Window.Resources>
        <LinearGradientBrush x:Key="ShadowGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8A5CF5" Offset="0"/>
            <!-- Purple -->
            <GradientStop Color="#A78BFA" Offset="0.5"/>
            <!-- Light purple -->
            <GradientStop Color="#C7D2FE" Offset="1"/>
            <!-- Indigo -->
        </LinearGradientBrush>

        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EDE9FE"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#8A5CF5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AnimatedButtonStyle" TargetType="ui:Button">
            <Setter Property="Background" Value="#8A5CF5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ui:Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,40,0,20" HorizontalAlignment="Center">
            <Border x:Name="GradientShadow"
                    Width="500"
                    Height="260"
                    CornerRadius="40"
                    Background="{StaticResource ShadowGradient}"
                    Opacity="0"
                    VerticalAlignment="Center"
                    Margin="0,10,0,0">
                <Border.Effect>
                    <BlurEffect x:Name="ShadowEffect" 
                    Radius="150" 
                    KernelType="Gaussian" 
                    RenderingBias="Quality"/>
                </Border.Effect>
            </Border>

            <Border x:Name="InputCard"
                    Width="450"
                    CornerRadius="40"
                    Background="White"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="6" ShadowDepth="0"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <ScaleTransform ScaleY="1"/>
                </Border.RenderTransform>
                <StackPanel Margin="25">
                    <TextBlock Text="Найти рифму"
                               Foreground="#333333"
                               FontSize="24"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="4" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBox x:Name="txtInputWord"
                             Foreground="#333333"
                             FontSize="15"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1.5"
                             Padding="12,10"
                             Background="White"
                             TextChanged="TxtInputWord_TextChanged"/>
                    <ui:Button x:Name="btnSearchRhymes" 
                          Content="Найти рифму" 
                          Width="160"
                          Height="50"
                          HorizontalAlignment="Stretch"
                          Appearance="Primary"
                          Background="#8A5CF5"
                          CornerRadius="25"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0,20,0,0"
                          Click="BtnSearchRhymes_Click">
                    </ui:Button>
                </StackPanel>
            </Border>
        </Grid>

        <Border x:Name="RhymesCard"
                Grid.Row="1"
                Width="450"
                CornerRadius="40"
                Background="White"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="6" ShadowDepth="0"/>
            </Border.Effect>
            <Border.RenderTransform>
                <ScaleTransform ScaleY="1"/>
            </Border.RenderTransform>
            <ListBox x:Name="lbRhymes"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                     MaxHeight="350"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Margin="15">
                <ListBox.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Width" Value="8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid>
                                        <Track Name="PART_Track">
                                            <Track.Thumb>
                                                <Thumb BorderThickness="0">
                                                    <Thumb.Template>
                                                        <ControlTemplate>
                                                            <Border Width="8" CornerRadius="4">
                                                                <Border.Background>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                        <GradientStop Color="#8A5CF5" Offset="0"/>
                                                                        <GradientStop Color="#A78BFA" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Border.Background>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                                </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>
            </ListBox>
        </Border>
    </Grid>
</Window>