<Page x:Class="kur.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kur"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="UserPage"
      FontFamily="Segoe UI">
    <Grid>
        <Border Width="800" Height="430" 
                CornerRadius="30" 
                Background="White"
                BorderThickness="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.ColumnSpan="2"
                           Text="Управление пользователями" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Left Panel: Search and ListBox -->
                <StackPanel Grid.Row="1" Margin="0,30,0,0">
                    <TextBlock Text="Поиск" Foreground="#555555" Margin="5,0"/>
                    <ui:TextBox x:Name="txtSearch" 
                                PlaceholderText="Введите логин" 
                                Margin="0,5,0,10"
                                FontSize="14"
                                BorderThickness="1.5"
                                Padding="12,10"
                                TextChanged="SearchTextChanged">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Search24" Foreground="#8A5CF5"/>
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                    <ListBox x:Name="ulist" 
                             DisplayMemberPath="Login" 
                             SelectionChanged="ulist_SelectionChanged"
                             Background="White"
                             BorderBrush="#DDDDDD"
                             BorderThickness="1.5"
                             Height="300"/>
                </StackPanel>

                <!-- Right Panel: User Details -->
                <Grid Grid.Column="1" Grid.Row="1" Margin="20,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Логин" Foreground="#555555" Margin="5,0" Width="150" VerticalAlignment="Center"/>
                        <ui:TextBox x:Name="usernametext" 
                                    PlaceholderText="Введите логин" 
                                    Width="200" 
                                    Margin="0,5,0,0"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1.5"
                                    Padding="12,10">
                            <ui:TextBox.Icon>
                                <ui:SymbolIcon Symbol="Person24" Foreground="#8A5CF5"/>
                            </ui:TextBox.Icon>
                        </ui:TextBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Пароль" Foreground="#555555" Margin="5,0" Width="150" VerticalAlignment="Center"/>
                        <ui:PasswordBox x:Name="passwordtext" 
                                        PlaceholderText="Введите пароль" 
                                        Width="200" 
                                        Margin="0,5,0,0"
                                        FontSize="14"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1.5"
                                        Padding="12,10">
                            <ui:PasswordBox.Icon>
                                <ui:SymbolIcon Symbol="LockClosed24" Foreground="#8A5CF5"/>
                            </ui:PasswordBox.Icon>
                        </ui:PasswordBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Уровень доступа" Foreground="#555555" Margin="5,0" Width="150" VerticalAlignment="Center"/>
                        <ComboBox x:Name="comborole" 
                                  DisplayMemberPath="DisplayName" 
                                  SelectedValuePath="RoleValue"
                                  Width="200"
                                  Margin="0,5,0,0"
                                  FontSize="14"
                                  Background="White"
                                  BorderBrush="#DDDDDD"
                                  BorderThickness="1.5"
                                  Padding="12,10"
                                  SelectionChanged="comborole_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <ui:Button x:Name="save" 
                                   Content="Сохранить" 
                                   Width="120"
                                   Height="40"
                                   Appearance="Primary"
                                   Background="#8A5CF5"
                                   Foreground="White"
                                   CornerRadius="20"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,10,0"
                                   Click="save_Click"/>
                        <ui:Button x:Name="del" 
                                   Content="Удалить" 
                                   Width="120"
                                   Height="40"
                                   Appearance="Secondary"
                                   Foreground="#8A5CF5"
                                   BorderBrush="#8A5CF5"
                                   CornerRadius="20"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Margin="0,0,10,0"
                                   Click="del_Click"/>
                        <ui:Button x:Name="cleanb" 
                                   Content="Очистить" 
                                   Width="120"
                                   Height="40"
                                   Appearance="Secondary"
                                   Foreground="#8A5CF5"
                                   BorderBrush="#8A5CF5"
                                   CornerRadius="20"
                                   FontWeight="SemiBold"
                                   FontSize="13"
                                   Click="cleanb_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>