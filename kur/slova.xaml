<Page x:Class="kur.slova"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kur"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="slova"
      FontFamily="Segoe UI">
    <Grid>
        <Border Width="800" Height="430" 
                CornerRadius="30" 
                Background="White"
                BorderThickness="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" 
                           Text="Управление словами" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Input Section -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            Margin="0,30,0,20">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Слово" Foreground="#555555" Margin="5,0"/>
                        <ui:TextBox x:Name="txtNewWord" 
                                    PlaceholderText="Введите слово" 
                                    Width="150" 
                                    Margin="0,5,0,0"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1.5"
                                    Padding="12,10">
                            <ui:TextBox.Icon>
                                <ui:SymbolIcon Symbol="TextCaseTitle24" Foreground="#8A5CF5"/>
                            </ui:TextBox.Icon>
                        </ui:TextBox>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Позиция ударения" Foreground="#555555" Margin="5,0"/>
                        <ui:TextBox x:Name="txtNewStressPosition" 
                                    PlaceholderText="Начиная с 0" 
                                    Width="170" 
                                    Margin="0,5,0,0"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1.5"
                                    Padding="12,10">
                            <ui:TextBox.Icon>
                                <ui:SymbolIcon Symbol="NumberSymbol24" Foreground="#8A5CF5"/>
                            </ui:TextBox.Icon>
                        </ui:TextBox>
                    </StackPanel>
                    <ui:Button Content="Добавить" 
                               Width="150"
                               Height="40"
                               Appearance="Primary"
                               Background="#8A5CF5"
                               Foreground="White"
                               CornerRadius="20"
                               FontWeight="SemiBold"
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               Click="BtnAddWord_Click"/>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Name="wordsgrid" 
                          Grid.Row="1" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          Margin="0,0,0,20"
                          SelectionMode="Single"
                          Background="White">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#8A5CF5"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Слово" Binding="{Binding Word}" Width="*"/>
                        <DataGridTextColumn Header="Ударение" Binding="{Binding StressPosition}" Width="*"/>
                        <DataGridTemplateColumn Width="300">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <ui:Button Content="Редактировать" 
                                                   Appearance="Secondary"
                                                   Foreground="#8A5CF5"
                                                   BorderBrush="#8A5CF5"
                                                   CornerRadius="20"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   Height="40"
                                                   Margin="0,0,10,0"
                                                   Click="BtnEditWord_Click"/>
                                        <ui:Button Content="Удалить" 
                                                   Appearance="Secondary"
                                                   Foreground="#8A5CF5"
                                                   BorderBrush="#8A5CF5"
                                                   CornerRadius="20"
                                                   FontWeight="SemiBold"
                                                   FontSize="13"
                                                   Height="40"
                                                   Click="BtnDeleteWord_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Footer -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <TextBlock x:Name="txtStatus" 
                               Text="Готов" 
                               Foreground="#555555" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ui:Button Content="Импорт слов" 
                               Width="150"
                               Height="40"
                               Appearance="Secondary"
                               Foreground="#8A5CF5"
                               BorderBrush="#8A5CF5"
                               CornerRadius="20"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>