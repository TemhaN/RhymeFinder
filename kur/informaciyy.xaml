<Window x:Class="kur.informaciyy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kur"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Окно администратора" 
        Height="700" 
        Width="900" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Background="#F0EBFF" >
        <Border CornerRadius="10" 
                Background="#F0EBFF" 
                BorderThickness="0"
                Margin="20"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0">
                    <Grid>
                        <TextBlock Text="Основная информация" 
                                   FontSize="34" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="#8A5CF5"
                                   FontWeight="SemiBold"/>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Frame Name="MainFrame" 
                       NavigationUIVisibility="Hidden" 
                       ContentRendered="MainFrame_ContentRendered" 
                       Grid.Row="1"
                       Margin="10">
                    <Frame.Effect>
                        <DropShadowEffect ShadowDepth="2" 
                                         Direction="315" 
                                         Color="#8A5CF5" 
                                         Opacity="0.14" 
                                         BlurRadius="30"/>
                    </Frame.Effect>
                </Frame>
                <!-- Footer Navigation -->
                <Border Grid.Row="2" 
                        Background="#F0EBFF" 
                        CornerRadius="0,0,20,20"
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ui:Button x:Name="slovaClick" 
                                  Content="Слова" 
                                  Grid.Column="0"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Width="150"
                                  Height="40"
                                  Appearance="Primary"
                                  Background="#8A5CF5"
                                  CornerRadius="20"
                                  FontWeight="SemiBold"
                                  Click="slovaClick_Click"/>

                        <ui:Button x:Name="rifmiClick" 
                                  Content="Рифмы" 
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Width="150"
                                  Height="40"
                                  Appearance="Primary"
                                  Background="#8A5CF5"
                                  CornerRadius="20"
                                  FontWeight="SemiBold"
                                  Click="rifmiClick_Click"/>

                        <ui:Button x:Name="tipClick" 
                                  Content="Пользователи" 
                                  Grid.Column="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Width="150"
                                  Height="40"
                                  Appearance="Primary"
                                  Background="#8A5CF5"
                                  CornerRadius="20"
                                  FontWeight="SemiBold"
                                  Click="tipClick_Click"/>
                    </Grid>
                </Border>

                <!-- Back Button -->
                <ui:Button x:Name="bbtn"  
                           Content="Назад" 
                           Height="40" 
                           Width="80" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Top"
                           Margin="0,20,20,0"
                           Grid.Row="0"
                           Appearance="Secondary"
                           Foreground="#8A5CF5"
                           BorderBrush="#8A5CF5"
                           CornerRadius="20"
                           FontWeight="SemiBold"
                           Click="bbtn_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>