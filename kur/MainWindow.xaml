<Window x:Class="kur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kur"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="740" 
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <Grid Background="#F5F3FF">
        <Border Width="380" Height="680" 
                CornerRadius="20" 
                BorderThickness="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="White">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <Rectangle Width="320" Height="150" RadiusX="30" RadiusY="70" HorizontalAlignment="Center">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="photo/rifma.png" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>


                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,30">
                    <TextBlock Text="Добро пожаловать" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="#333333"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Логин" 
                               Foreground="#555555"
                               Margin="5,0"/>
                    <ui:TextBox x:Name="BoxLog" 
                                PlaceholderText="Введите логин"
                                Margin="0,5,0,0"
                                FontSize="14"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1.5"
                                Padding="12,10">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Person24" Foreground="#8A5CF5"/>
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </StackPanel>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Пароль" 
                               Foreground="#555555"
                               Margin="5,0"/>
                    <ui:PasswordBox x:Name="BoxPassword" 
                                    PlaceholderText="Введите пароль"
                                    Margin="0,5,0,0"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1.5"
                                    Padding="12,10">
                        <ui:PasswordBox.Icon>
                            <ui:SymbolIcon Symbol="LockClosed24" Foreground="#8A5CF5"/>
                        </ui:PasswordBox.Icon>
                    </ui:PasswordBox>
                </StackPanel>

                <ui:Button x:Name="BtnVhod" 
                           Content="Войти" 
                           Width="100"
                           Height="40"
                           HorizontalAlignment="Stretch"
                           Appearance="Primary"
                           Background="#8A5CF5"
                           CornerRadius="20"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,20"
                           Click="BtnVhod_Click">
                </ui:Button>

                <Border Height="1" Background="#EEEEEE" Margin="0,0,0,20"/>

                <TextBlock Text="Ещё нет аккаунта?" 
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           Margin="0,0,0,10"/>

                <ui:Button x:Name="BtnReg" 
                           Content="Создать аккаунт" 
                           Width="150"
                           Height="36"
                           HorizontalAlignment="Stretch"
                           Appearance="Secondary"
                           Foreground="#8A5CF5"
                           BorderBrush="#8A5CF5"
                           CornerRadius="20"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Click="BtnReg_Click">
                </ui:Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>